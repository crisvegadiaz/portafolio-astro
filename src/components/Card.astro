---
const { card } = Astro.props;
const { img, subtitle, icons, text, links } = card;
---

<li class="card">
  <img
    class="card-image"
    width="600"
    height="310"
    src={`/image/480x248/${img}`}
    srcset={`/image/600x310/${img} 600w, /image/480x248/${img} 480w, /image/360x186/${img} 360w`}
    sizes="(max-width: 600px) 360px, (max-width: 900px) 480px, 600px"
    alt={`Imagen del proyecto ${subtitle}`}
    loading="lazy"
    decoding="async"
  />
  <section>
    <div>
      {
        icons.map((icon) => (
          <img
            src={`/icons/${icon}.svg`}
            alt={`Icono de ${icon}`}
            class="tech-icon"
            title={icon}
          />
        ))
      }
    </div>
    <details name="info">
      <summary>{subtitle}</summary>
      <p>{text}</p>
    </details>
    <footer>
      {
        links.map((link) => {
          const isGitHub = link.includes("github.com");
          const linkText = isGitHub ? "GitHub" : "Web";
          const title = isGitHub
            ? `Ver el código de ${subtitle} en GitHub`
            : `Ver el proyecto ${subtitle} en vivo`;
          return (
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={title}
              title={title}
              class="card-link"
            >
              <img
                src={`/icons/${linkText}.svg`}
                alt={linkText}
                class="tech-icon"
              />
              {linkText}
            </a>
          );
        })
      }
    </footer>
  </section>
</li>

<style>
  .card {
    list-style: none;
    display: flex;
    flex-direction: column;
    border: 1px solid var(--color-navy-blue);
    border-radius: 5px;
    background-color: var(--color-dark-blue);
    transition:
      transform 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    overflow: hidden;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px var(--color-light-blue);
  }

  .card-image {
    width: 100%;
    height: auto;
    aspect-ratio: 480 / 248;
    object-fit: cover;
    display: block;
  }

  section {
    padding: 1rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
  }

  div {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .tech-icon {
    height: 28px;
    width: 28px;
    transition: transform 0.2s;
  }

  .tech-icon:hover {
    transform: scale(1.2);
  }

  details {
    border-top: 1px solid var(--color-navy-blue);
    padding-top: 1rem;
  }

  details summary {
    cursor: pointer;
    font-weight: 600;
    font-size: 1.25rem;
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--color-white);
  }

  details summary::-webkit-details-marker {
    display: none;
  }

  details summary::after {
    content: "▼";
    font-size: 0.8rem;
    margin-left: 0.5rem;
    transition: transform 0.2s;
    color: var(--color-gray);
  }

  details[open] summary::after {
    transform: rotate(180deg);
  }

  details p {
    margin-top: 0.75rem;
    color: var(--color-gray);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  footer {
    display: flex;
    gap: 1rem;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--color-navy-blue);
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    padding: 0.6rem 1rem;
    color: var(--color-white);
    text-decoration: none;
    border-radius: 6px;
    font-weight: 500;
    text-align: center;
    transition:
      background-color 0.2s,
      transform 0.1s;
  }

  .card-link[href*="github.com"] {
    background-color: var(--color-deep-blue);
    border: 1px solid var(--color-navy-blue);
  }

  .card-link[href*="github.com"]:hover {
    background-color: var(--color-navy-blue);
    transform: scale(1.02);
  }

  .card-link:not([href*="github.com"]) {
    background-color: var(--color-deep-blue);
    border: 1px solid var(--color-navy-blue);
  }

  .card-link:not([href*="github.com"]):hover {
    background-color: var(--color-navy-blue);
    transform: scale(1.02);
  }
</style>
