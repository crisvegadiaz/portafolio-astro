---
const { contact } = Astro.props;
const { title, description, email, ariaLabel, form } = contact;
---

<article class="contact">
  <h2>{title}</h2>
  {
    description.map((desc, i) =>
      i === 2 ? (
        <p>
          {desc}
          <a
            aria-label={ariaLabel.replace("{email}", email)}
            href={`mailto:${email}`}
          >
            {email}
          </a>
        </p>
      ) : (
        <p>{desc}</p>
      )
    )
  }
  <form id="contact-form">
    <label for="name">{form.nameLabel}</label>
    <input
      type="text"
      id="name"
      name="name"
      placeholder={form.namePlaceholder}
      pattern="^[A-Za-z\s]+$"
      title={form.nameTitle}
      required
    />
    <label for="email">{form.emailLabel}</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder={form.emailPlaceholder}
      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
      title={form.emailTitle}
      required
    />
    <label for="message">{form.messageLabel}</label>
    <textarea
      id="message"
      name="message"
      rows="4"
      placeholder={form.messagePlaceholder}
      minlength="1"
      maxlength="500"
      title={form.messageTitle}
      required></textarea>
    <button type="submit" id="submit-button">{form.submitButton}</button>
  </form>
  
</article>

<script is:inline src="/js/form.js"></script>

<style>
  .contact {
    display: none;
  }

  .contact-active {
    display: block;
  }

  article {
    color: var(--color-white);
    font-family: "Roboto", sans-serif;
    padding: 1rem;
    position: sticky;
    top: 0;
  }

  h2 {
    color: var(--color-purple);
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  a {
    color: var(--color-purple);
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  label {
    font-weight: bold;
    font-size: 1rem;
  }
  input,
  textarea {
    color: var(--color-white);
    padding: 0.5rem;
    border: 1px solid var(--color-green);
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    background-color: var(--color-navy-blue);
    resize: none;
  }
  button {
    font-size: 1rem;
    font-weight: 700;
    padding: 0.5rem 1rem;
    background-color: var(--color-light-blue);
    color: var(--color-white);
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
</style>
